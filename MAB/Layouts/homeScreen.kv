# Layout for the home screen: Two buttons(Help, Start)
<HomeScreen>:
    name: "home"

    Screen:
        # Set background
        MyImageBackground:
            id: home_screen_background

    # RelativeLayout for the animation and the buttons
    RelativeLayout:
        # Background animation in home screen
        Image:
            id: home_screen_gif
            source: 'res/slot_gif.zip'
            size_hint: 0.95, 0.95
            pos_hint:  {'center_x' : 0.5, 'center_y': 0.55}
            allow_stretch: True
            keep_ratio: True
            anim_delay: 0.19
            keep_data: True

        # Button 'Help': Gives more information about the problem and the application
        MyButton:
            id: help_btn
            size_hint: 0.11, 0.148
            pos_hint: {'center_x' : 0.08, 'center_y': 0.89}
            on_press: help_icn.source = help_icn_pressed.source
            on_release: root.manager.current  = "helpScreen"
            on_release: help_icn.source = 'res/icon_buttons/question_mark_icon.png'

             # Two images for the button: one for when pressed and one when not.
            MyImageButton:
                id: help_icn_pressed
                source: 'res/icon_buttons/question_mark_icon_pressed.png'

            MyImageButton:
                id: help_icn
                source: 'res/icon_buttons/question_mark_icon.png'

        # Button starting the application.
        # It goes to the window with the settings for the tests
        MyButton:
            id: play_btn
            size_hint: 0.111, 0.15
            pos_hint: {'center_x' : 0.92, 'center_y': 0.11}
            on_press: arrow_image.source = arrow_image_pressed.source
            on_release: root.manager.current  = "secondScreen"
            on_release: arrow_image.source = 'res/icon_buttons/right_arrow_icon.png'

            # Two images for the button: one for when pressed and one when not.
            MyImageButton:
                id: arrow_image_pressed
                source: 'res/icon_buttons/right_arrow_icon_pressed.png'

            MyImageButton:
                id: arrow_image
                source: 'res/icon_buttons/right_arrow_icon.png'




