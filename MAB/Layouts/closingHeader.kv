# Custom Header that can be closed
<ClosingHeader>:
    background_normal: 'res/icon_buttons/background_tab_bar.png'
    background_down: 'res/icon_buttons/background_tab_bar_pressed.png'
    keep_ratio: True
    # variable tab_width
    size_hint_x: None

    # Layout for the closing tab header
    BoxLayout:
        pos: root.pos
        size_hint: None, None
        size: root.size
        padding: 3
        keep_ratio: True

         #keeps padding
        Label:
            id:lbl
            keep_ratio: True

        RelativeLayout:
            size_hint: 0.25, 1
            orientation: 'vertical'
            width: 22
            keep_ratio: True

            # Image(button) closes the tab
            Image:
                source: 'res/icon_buttons/close_icon.png'
                pos_hint: {'x': 0, 'y': 0.3}
                keep_ratio:True
                on_touch_down:
                    if self.collide_point(*args[1].pos) :\
                    root.panel.remove_widget(root)

